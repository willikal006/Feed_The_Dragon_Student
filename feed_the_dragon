def test_blit_function(self):
    pygame.init()
    screen = pygame.display.set_mode((800, 600))
    screen.fill((100, 149, 237))  # Cornflower Blue background color


    red_surface = pygame.Surface((50, 50))
    red_surface.fill((255, 0, 0))


    position = pygame.Rect(100, 100, 50, 50)
    blit(screen, red_surface, position)


    self.assertEqual((255, 0, 0, 255), screen.get_at((101, 101)))  # Top-left point inside the red surface
    pygame.quit()

