        # Modify the screen content
        pygame.draw.line(screen, (255, 0, 0), (0, 0), (799, 599), 5)
        update_display()

        # Verify the screen updates (pixel on drawn line changes)
        updated_color = screen.get_at((5, 5))  # Position along the red line
        self.assertEqual((255, 0, 0, 255), updated_color)

        pygame.quit()

